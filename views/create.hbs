<h1>Add new user</h1>
<form method="POST">
    <div class="form-group">
        <label>Name</label><br>
        <input name="name" class="field"/>
    </div>
    <div class="form-group">
        <label>Age</label><br>
        <input name="age" type="number" class="field" min="1" max="110" />
    </div>
    <div class="form-group">
        <label>Country</label><br>
        <input name="country" class="field"/>
    </div>
    <div class="form-group">
        <label>Email</label><br>
        <input name="email" class="field"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-success" />
    </div>
</form>
<a href="/" class="btn btn-primary">To all</a>
